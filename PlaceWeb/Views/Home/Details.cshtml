@{
}
@model List<CategoryViewModel>;
<div class="container-fluid">
    <h1>Detalles / Categorias del Lugar</h1>
    <div class="row align-content-md-center">
        <table class="table-active" border="1" style="border-color: blue">
            <tr>
                <td>Identificador</td>
                <td>Nombre</td>
                <td>Nombre Corto</td>
                <td>Nombre Plural</td>
                <td>Icono</td>
                <td>Más Fotos</td>
            </tr>
            @foreach (PlaceWeb.Models.CategoryViewModel item in Model)
            {
                <tr>
                    <td>@item.Identificator</td>
                    <td>@item.Name</td>
                    <td>@item.ShortName</td>
                    <td>@item.PluralName</td>
                    <td><img src="@item.Icono" /></td>
                    <td>@Html.ActionLink("Ver","Photos","Home", new {item.Id})</td>
                </tr>
            }
            <tr>
                <td colspan="3">Fotografia</td>

            </tr>
            <tr>
                <td colspan="3">
                    <figure class="figure-img">
                        <img src="https://fastly.4sqi.net/img/general//49578900_byZDSy2nkAAz8YWg0foYkEJepTPjNWP3XXzjWr4tPO4.jpg" class="card-img-bottom" />
                    </figure>
                </td>
            </tr>
        </table>
        <br />
        
    </div>
</div>
